
@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Register Page UI</title>
    <script src="~/Scripts/jquery-3.7.0.min.js"></script>
    <script src="~/Scripts/UserRegisterJS.js"></script>
    <style>
        body {
            margin: 0;
            font-family: 'Segoe UI', sans-serif;
            background: #f1f2fe;
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
        }

        .container {
            display: flex;
            background: white;
            border-radius: 16px;
            padding: 40px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            max-width: 1000px;
            width: 100%;
        }

        .form-section {
            flex: 1;
            padding-right: 40px;
        }

            .form-section h2 {
                margin-bottom: 20px;
            }

        .form-group {
            display: flex;
            gap: 16px;
        }

            .form-group input {
                flex: 1;
            }

        input[type="text"],
        input[type="email"],
        input[type="password"] {
            width: 100%;
            padding: 10px;
            margin: 10px 0;
            border-radius: 6px;
            border: 1px solid #ddd;
            font-size: 16px;
        }

        .terms {
            font-size: 12px;
            color: #555;
            margin-bottom: 20px;
        }

            .terms a {
                color: #6c63ff;
                text-decoration: none;
            }

        .register-btn {
            background: #6c63ff;
            color: white;
            border: none;
            padding: 12px;
            width: 100%;
            border-radius: 6px;
            font-size: 16px;
            cursor: pointer;
        }

        .divider {
            text-align: center;
            margin: 20px 0;
            color: #999;
        }

        .social-icons {
            display: flex;
            justify-content: center;
            gap: 20px;
            margin-bottom: 10px;
        }

            .social-icons button {
                width: 40px;
                height: 40px;
                border-radius: 50%;
                border: none;
                background-color: #f5f5f5;
                cursor: pointer;
                font-size: 18px;
            }

        .login-link {
            text-align: center;
            font-size: 14px;
        }

            .login-link a {
                color: #6c63ff;
                text-decoration: none;
            }

        .info-section {
            flex: 1;
            padding-left: 40px;
            display: flex;
            flex-direction: column;
            justify-content: center;
            color: #333;
        }

            .info-section h2 {
                margin-bottom: 10px;
            }

        .info-item {
            display: flex;
            align-items: center;
            gap: 12px;
            margin-top: 20px;
        }

        .info-icon {
            width: 24px;
            height: 24px;
            background: #ccc;
            border-radius: 50%;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="form-section">
            <h2>Begin your journey</h2>
            <input type="text" id="txtusername" placeholder="Enter your username" />

            <div class="form-group">
                <input type="text" id="txtfname" placeholder="Input first name" />
                <input type="text" id="txtlname" placeholder="Input last name" />
            </div>

            <input type="email" id="txtemail" placeholder="example.email@gmail.com" />
            <input type="password" id="pass" placeholder="Enter at least 8+ characters" />
            <select id="txtrole">
                <option value="" disabled selected>Select your role</option>
                <option value="developer">Developer</option>
                <option value="designer">Designer</option>
                <option value="project_manager">Project Manager</option>
                <option value="student">Student</option>
            </select>
            <div class="terms">
                <input type="checkbox" id="agreed_terms" name="agreedTerms" />
                <label for="agreedTerms">
                    By signing up, I agree with the
                    <a href="#">Terms of Use</a> & <a href="#">Privacy Policy</a>
                </label>
            </div>
            <button  class="register-btn" onclick="SaveUserReg()">Register</button>
            <div class="divider">OR</div>
            <div class="social-icons">
                <button>G</button>
                <button>f</button>
                <button></button>
            </div>
            <div class="login-link">Returning user? <a href="#">Log in here</a></div>
        </div>
        <div class="info-section">
            <h2>Come join us</h2>
            <div class="info-item">
                <div class="info-icon" style="background: #00c4b4;"></div>
                <span>Contribute to projects you love and earn rewards.</span>
            </div>
            <div class="info-item">
                <div class="info-icon" style="background: #b39ddb;"></div>
                <span>Learn and earn helping projects build and grow their communities</span>
            </div>
            <div class="info-item">
                <div class="info-icon" style="background: #e57373;"></div>
                <span>Engage with a community of learners and share insights</span>
            </div>
        </div>
    </div>
</body>
</html>